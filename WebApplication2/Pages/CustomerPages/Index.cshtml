@page "/Customer/{id}"
@model CustomerPageModel

@{
    Layout = "_Layout";
    ViewData["Title"] = "Customer Page";
}

<div class="container">
    <h1>@ViewData["Title"]</h1>

    <p>Customer ID: @Model.Customer.Id</p>
    <p>Name: @Model.Customer.Name</p>
    <table class="table">
        <thead>
        <tr>
            <th>Notifications</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var notification in Model.Notifications)
        {
            <tr>
                <td>@notification</td>
            </tr>
        }
        </tbody>
    </table>
</div>
